{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "outDir": "dist",
    "removeComments": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],
    "module": "UMD"
  },
  "include": ["src"],
  "exclude": ["test"]
}
